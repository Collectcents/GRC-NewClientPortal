

@{
    ViewData["Title"] = "Accounts";
    Layout = "CommonLayout"; // uses shared header/footer
}

<section class="home-center">
    <div class="home-wrap">

        <!-- Welcome message -->
        <div class="welcome-card">
            <h2 class="welcome-title">Welcome to Client Access</h2>

            <p class="welcome-text">
                In your security interest, your session expires after 30 minutes of inactivity.
                If your session expires, you will be returned to the log in screen. Simply login again to resume your activities.
            </p>

            <div class="welcome-alert">
                90 days before password expires.
            </div>
        </div>

        <!-- Tiles -->
        <div class="tile-grid">
            <a class="tile" asp-controller="Accounts" asp-action="Index">
                <i class="bi bi-folder2-open tile-icon"></i>
                <div class="tile-title">My Accounts</div>
            </a>

            <a class="tile" asp-controller="Ach" asp-action="Index">
                <i class="bi bi-bank tile-icon"></i>
                <div class="tile-title">My ACH</div>
            </a>

            <a class="tile" asp-controller="Placements" asp-action="Index">
                <i class="bi bi-briefcase tile-icon"></i>
                <div class="tile-title">My Placements</div>
            </a>

            <a class="tile" asp-controller="ReferenceGuide" asp-action="Index">
                <i class="bi bi-book tile-icon"></i>
                <div class="tile-title">My Reference Guide</div>
            </a>

            <a class="tile" asp-controller="Reports" asp-action="Index">
                <i class="bi bi-bar-chart-line tile-icon"></i>
                <div class="tile-title">My Reports</div>
            </a>

            <a class="tile" asp-controller="ValidationMedia" asp-action="Index">
                <i class="bi bi-folder-check tile-icon"></i>
                <div class="tile-title">My Validation Media</div>
            </a>
        </div>

    </div>
</section>



